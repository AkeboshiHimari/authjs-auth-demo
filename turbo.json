{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalEnv": ["MONGODB_URI"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "web#build": {
      "env": ["AUTH_SECRET"]
    },
    "auth#build": {
      "env": ["AUTH_SECRET","MONGODB_URI","AUTH_GOOGLE_ID","AUTH_GOOGLE_SECRET","AUTH_TWITTER_ID","AUTH_TWITTER_SECRET"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
